<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- ImageView for alarm volume icon, placed next to the volume SeekBar. -->
    <ImageView
        android:id="@+id/volume_icon_img"
        android:layout_width="@dimen/icon_show_size"
        android:layout_height="@dimen/icon_show_size"
        android:contentDescription="@string/alarm_sound"
        android:src="@drawable/ic_volume"
        app:layout_constraintBottom_toBottomOf="@+id/alarm_volume_seek_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/alarm_volume_seek_bar"
        app:tint="@color/colorOnSurface" />

    <!-- SeekBar for controlling the alarm volume, positioned next to the volume icon. -->
    <SeekBar
        android:id="@+id/alarm_volume_seek_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_m"
        android:layout_marginTop="@dimen/spacing_l"
        android:thumbTint="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/volume_icon_img"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ImageView for vibration icon, placed next to the "Vibrate" text. -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/icon_show_size"
        android:layout_height="@dimen/icon_show_size"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_vibration"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        app:tint="@color/colorOnSurface"/>

    <!-- TextView for the "Vibrate" label, placed next to the vibration icon. -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_m"
        android:text="@string/vibrate"
        android:textSize="@dimen/text_size_m"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintBottom_toBottomOf="@+id/vibrateSwitch"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/vibrateSwitch" />

    <!-- MaterialSwitch for enabling or disabling vibration, positioned below the volume SeekBar. -->
    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/vibrateSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_l"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarm_volume_seek_bar" />

    <!-- ImageView for ringtone icon, placed next to the "Sound" label. -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/icon_show_size"
        android:layout_height="@dimen/icon_show_size"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_ringtone"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:tint="@color/colorOnSurface"/>

    <!-- TextView for the "Sound" label, placed next to the ringtone icon. -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_m"
        android:text="@string/sound"
        android:textSize="@dimen/text_size_m"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintBottom_toBottomOf="@+id/alarmSoundTv"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/alarmSoundTv" />

    <!-- TextView for displaying the selected alarm sound, with a clickable arrow. -->
    <TextView
        android:id="@+id/alarmSoundTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_m"
        android:drawablePadding="@dimen/spacing_s"
        android:ellipsize="end"
        android:maxWidth="200dp"
        android:maxLines="1"
        android:padding="@dimen/spacing_m"
        android:textSize="@dimen/text_size_m"
        android:textColor="?attr/colorOnSurface"
        app:drawableEndCompat="@drawable/ic_right_arrow"
        app:drawableTint="?attr/colorOnSurface"
        app:layout_constraintEnd_toEndOf="@+id/vibrateSwitch"
        app:layout_constraintTop_toBottomOf="@+id/vibrateSwitch"
        tools:text="Rock" />

    <!-- Divider line separating the sound settings from the next section below. -->
    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_xs"
        android:layout_marginTop="@dimen/spacing_m"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarmSoundTv" />

</androidx.constraintlayout.widget.ConstraintLayout>
