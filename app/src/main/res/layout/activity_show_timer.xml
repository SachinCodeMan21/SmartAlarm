<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/showTimerRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".feature.timer.presentation.view.activity.ShowTimerActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/show_timer_start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/show_timer_end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <!-- Show Timer Custom Toolbar   -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/showTimerAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/showTimerToolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:textAlignment="center"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="@color/colorOnSurface"
            app:title="@string/timer_dashboard"
            app:titleCentered="true" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Show Timer RecyclerView   -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/showTimerRv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/show_timer_end_guideline"
        app:layout_constraintStart_toStartOf="@+id/show_timer_start_guideline"
        app:layout_constraintTop_toBottomOf="@+id/showTimerAppBarLayout"
        tools:listitem="@layout/timer_item_layout" />

    <!--  Show Timer Add New Timer Floating Button  -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addNewTimerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_m"
        android:layout_marginBottom="@dimen/spacing_m"
        android:clickable="true"
        android:contentDescription="@string/add_new_timer"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ClassNameCheck" />

    <!--  ShowTimer Progress Bar -->
    <ProgressBar
        android:id="@+id/showTimerProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>