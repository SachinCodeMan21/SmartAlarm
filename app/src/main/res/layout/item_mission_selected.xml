<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/missionCard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="@dimen/spacing_m"
        app:cardCornerRadius="@dimen/card_corner_radius_xlarge"
        android:background="?attr/colorSurfaceContainerHigh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/selectedMissionContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Mission Image -->
            <ImageView
                android:id="@+id/selectedImageIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="@dimen/margin_s"
                android:contentDescription="@string/mission_icon"
                android:src="@drawable/ic_add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Close (X) icon -->
    <ImageView
        android:id="@+id/removeMissionIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="@dimen/spacing_xs"
        android:background="@color/red"
        android:contentDescription="@string/remove_mission"
        android:elevation="@dimen/card_elevation_medium"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toTopOf="@+id/missionCard"
        app:layout_constraintEnd_toEndOf="@+id/missionCard"
        app:layout_constraintStart_toEndOf="@+id/missionCard"
        app:layout_constraintTop_toTopOf="@+id/missionCard" />



</androidx.constraintlayout.widget.ConstraintLayout>
