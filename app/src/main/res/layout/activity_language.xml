<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".feature.setting.activity.LanguageActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/languageAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/languageToolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_default_height"
            app:title="@string/language"
            app:titleTextColor="?attr/colorOnSurface"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="?attr/colorOnSurface"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/language_guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/guideline_language_start" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/language_guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/guideline_language_end" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/language_guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/guideline_language_bottom" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/languageRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/language_guideline_bottom"
        app:layout_constraintEnd_toStartOf="@+id/language_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/language_guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/languageAppBarLayout"
        tools:listitem="@layout/item_language_layout" />


</androidx.constraintlayout.widget.ConstraintLayout>