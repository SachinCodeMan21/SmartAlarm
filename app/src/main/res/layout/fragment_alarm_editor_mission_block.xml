<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <!-- TextView displaying the "Mission" label with bold text and a fixed position relative to the RecyclerView. -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mission"
        android:textSize="@dimen/text_size_m"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintBottom_toTopOf="@+id/missionCount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- TextView showing the mission count (e.g., "0/3"), positioned below the "Mission" label. -->
    <TextView
        android:id="@+id/missionCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/text_size_m"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:text="0/3" />

    <!-- RecyclerView for displaying a horizontal list of missions, with an item placeholder for design-time preview. -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/missionRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_m"
        android:layout_marginTop="@dimen/spacing_m"
        android:clipToPadding="false"
        android:contentDescription="@string/alarm_mission_rv_desc"
        android:orientation="horizontal"
        android:paddingTop="@dimen/spacing_m"
        android:paddingBottom="@dimen/spacing_m"
        android:scrollbars="none"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_mission_placeholder" />

    <!-- Divider line separating the mission section from the sound section below it. -->
    <View
        android:id="@+id/missionAndSoundDivider"
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_xs"
        android:layout_marginTop="@dimen/spacing_m"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/missionRecyclerView" />


</androidx.constraintlayout.widget.ConstraintLayout>
