<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--[Choose Mission] Title For Our Bottom Sheet   -->
    <TextView
        android:id="@+id/choose_mission_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_l"
        android:gravity="center"
        android:text="@string/choose_mission"
        android:textSize="@dimen/text_size_l"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Shows A Simple Horizontal Line To Make UI Appealing   -->
    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_xxs"
        android:layout_marginTop="@dimen/spacing_m"
        android:background="?attr/colorPrimary"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintEnd_toEndOf="@+id/choose_mission_title"
        app:layout_constraintStart_toStartOf="@+id/choose_mission_title"
        app:layout_constraintTop_toBottomOf="@+id/choose_mission_title" />

   <!-- This Recyclerview Show All The Different Mission User Can Choose From For His Alarm  -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/allMissionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_m"
        android:contentDescription="@string/mission_type_selection"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        tools:listitem="@layout/bottom_sheet_mission_item_layout" />


</androidx.constraintlayout.widget.ConstraintLayout>