<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".feature.alarm.presentation.view.fragment.editor.SnoozeAlarmFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_l">

        <!-- Snooze Enable Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            android:background="?attr/colorSurfaceContainerHigh"
            app:cardCornerRadius="@dimen/card_corner_radius_xlarge"
            app:layout_constraintWidth_max="600dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_m"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/snooze"
                    android:textSize="@dimen/text_size_m"
                    android:textStyle="bold" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/snoozeEnabledSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Snooze Limit Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            android:background="?attr/colorSurfaceContainerHigh"
            app:cardCornerRadius="@dimen/card_corner_radius_xlarge"
            app:layout_constraintWidth_max="600dp"
            app:layout_constraintTop_toBottomOf="@id/materialCardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_m"
                android:gravity="center_vertical">

                <!-- Left spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <!-- Centered NumberPicker -->
                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/snoozeLimitPicker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:np_dividerColor="?attr/colorPrimary"
                    app:np_max="12"
                    app:np_min="0"
                    app:np_selectedTextSize="@dimen/text_size_m"
                    app:np_textSize="@dimen/text_size_s"
                    app:np_textColor="?attr/colorOnSurface"
                    app:np_selectedTextColor="@color/colorOnSurface"
                    android:contentDescription="@string/max_snooze_limit_picker" />

                <!-- Limit label -->
                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/limit"
                    app:np_textColor="?attr/colorOnSurface"
                    android:textSize="@dimen/text_size_m"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Interval Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            android:background="?attr/colorSurfaceContainerHigh"
            app:cardCornerRadius="@dimen/card_corner_radius_xlarge"
            app:layout_constraintWidth_max="600dp"
            app:layout_constraintTop_toBottomOf="@id/materialCardView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_m">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_s"
                    android:text="@string/interval"
                    android:textSize="@dimen/text_size_m"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_m">

                    <RadioButton
                        android:id="@+id/radio_1min"
                        style="@style/SnoozeRadioButtonStyle"
                        android:textColor="@color/colorOnSurface"
                        android:text="@string/_1_min" />

                    <RadioButton
                        android:id="@+id/radio_5min"
                        style="@style/SnoozeRadioButtonStyle"
                        android:textColor="@color/colorOnSurface"
                        android:text="@string/_5_min" />

                    <RadioButton
                        android:id="@+id/radio_10min"
                        style="@style/SnoozeRadioButtonStyle"
                        android:textColor="@color/colorOnSurface"
                        android:text="@string/_10_min" />

                    <RadioButton
                        android:id="@+id/radio_15min"
                        style="@style/SnoozeRadioButtonStyle"
                        android:textColor="@color/colorOnSurface"
                        android:text="@string/_15_min" />

                    <RadioButton
                        android:id="@+id/radio_20min"
                        style="@style/SnoozeRadioButtonStyle"
                        android:textColor="@color/colorOnSurface"
                        android:text="@string/_20_min" />

                    <RadioButton
                        android:id="@+id/radio_25min"
                        style="@style/SnoozeRadioButtonStyle"
                        android:textColor="@color/colorOnSurface"
                        android:text="@string/_25_min" />

                    <RadioButton
                        android:id="@+id/radio_30min"
                        style="@style/SnoozeRadioButtonStyle"
                        android:textColor="@color/colorOnSurface"
                        android:text="@string/_30_min" />

                </RadioGroup>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
