<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stopwatch_fragment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSurface"
    tools:context=".feature.stopwatch.presentation.view.StopwatchFragment">


   <!-- # 1. [Guideline Section] #  -->

    <!-- StopWatch Top Guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/stopwatch_guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/guideline_stopwatch_top" />

    <!-- StopWatch Left Guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/stopwatch_guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/guideline_stopwatch_start" />

    <!-- StopWatch Right Guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/stopwatch_guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/guideline_stopwatch_end" />

    <!-- StopWatch Bottom Guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/stopwatch_guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/guideline_stopwatch_bottom" />



    <!-- # 2. [Stopwatch ProgressBar Section] #  -->

    <!-- Stopwatch ProgressBar Indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/stopwatch_progress_bar_indicator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/stopwatch_progress_indicator"
        app:indicatorColor="?attr/colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/stopwatch_guideline_bottom"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/stopwatch_guideline_end"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/stopwatch_guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/stopwatch_guideline_top"
        app:layout_constraintVertical_bias="0.4"
        app:trackThickness="@dimen/stopwatch_progress_indicator_thickness" />



    <!-- # 3. [Stopwatch Time Display Section]  #  -->

    <!-- Stopwatch Seconds Time Text -->
    <TextView
        android:id="@+id/stopwatch_seconds_text"
        style="@style/TextAppearance.SmartAlarm.HeadlineLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/stopwatch_elapsed_time_size"
        app:layout_constraintBottom_toBottomOf="@id/stopwatch_progress_bar_indicator"
        app:layout_constraintEnd_toEndOf="@id/stopwatch_progress_bar_indicator"
        app:layout_constraintStart_toStartOf="@id/stopwatch_progress_bar_indicator"
        app:layout_constraintTop_toTopOf="@id/stopwatch_progress_bar_indicator"
        tools:text="00s" />

    <!-- Stopwatch MilliSeconds Time Text -->
    <TextView
        android:id="@+id/stopwatch_milliSeconds_text"
        style="@style/TextAppearance.SmartAlarm.BodyMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_m"
        app:layout_constraintEnd_toEndOf="@id/stopwatch_seconds_text"
        app:layout_constraintStart_toStartOf="@id/stopwatch_seconds_text"
        app:layout_constraintTop_toBottomOf="@id/stopwatch_seconds_text"
        tools:text="00" />

    <!-- Stopwatch Time Text Group for animation blinking -->
    <androidx.constraintlayout.widget.Group
        android:id="@+id/stopwatch_time_text_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="stopwatch_seconds_text,stopwatch_milliSeconds_text" />



    <!-- # 4. [Stopwatch Lap Time Display Section]  #  -->

    <!-- Stopwatch RecordLap Times RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/stopwatch_lap_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:scrollbars="vertical"
        android:contentDescription="@string/stopwatch_rv_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stopwatch_progress_bar_indicator"
        app:layout_constraintBottom_toTopOf="@id/stopwatch_guideline_bottom"
        tools:listitem="@layout/stop_watch_item"/>



    <!-- # 5. [Stopwatch Action Section]  #  -->

    <!-- FAB Reset,Play/Pause,Lap Buttons -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/reset_stopwatch_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_restart"
        android:contentDescription="@string/reset_stopwatch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/toggle_stopwatch_btn"
        app:layout_constraintEnd_toStartOf="@id/toggle_stopwatch_btn"
        app:layout_constraintTop_toTopOf="@id/toggle_stopwatch_btn"
        tools:ignore="ClassNameCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/toggle_stopwatch_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/toggle_stopwatch"
        android:layout_marginTop="@dimen/spacing_m"
        android:src="@drawable/ic_play"
        app:fabCustomSize="@dimen/fab_size_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/stopwatch_guideline_bottom"
        tools:ignore="ClassNameCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/record_lap_stopwatch_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_alarm"
        android:visibility="visible"
        android:contentDescription="@string/record_lap_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/toggle_stopwatch_btn"
        app:layout_constraintStart_toEndOf="@id/toggle_stopwatch_btn"
        app:layout_constraintTop_toTopOf="@id/toggle_stopwatch_btn"
        tools:ignore="ClassNameCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>